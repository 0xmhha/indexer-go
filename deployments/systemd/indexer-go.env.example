# Indexer-Go Environment Configuration
# Copy this file to /etc/indexer-go/indexer-go.env and customize

# RPC Configuration
INDEXER_RPC_ENDPOINT=http://localhost:8545
INDEXER_RPC_TIMEOUT=30s

# Database Configuration
INDEXER_DB_PATH=/var/lib/indexer-go/data
INDEXER_DB_READONLY=false

# Indexer Configuration
INDEXER_WORKERS=100
INDEXER_CHUNK_SIZE=100
INDEXER_START_HEIGHT=0
INDEXER_GAP_RECOVERY=true

# API Server Configuration
INDEXER_API_ENABLED=true
INDEXER_API_HOST=0.0.0.0
INDEXER_API_PORT=8080
INDEXER_API_GRAPHQL=true
INDEXER_API_JSONRPC=true
INDEXER_API_WEBSOCKET=true

# CORS Configuration
INDEXER_API_CORS_ENABLED=true
INDEXER_API_CORS_ALLOWED_ORIGINS=*

# Logging Configuration
INDEXER_LOG_LEVEL=info
INDEXER_LOG_FORMAT=json

# Event Bus Configuration (Optional)
INDEXER_EVENTBUS_ENABLED=true
INDEXER_EVENTBUS_PUBLISH_BUFFER=1000
INDEXER_EVENTBUS_SUBSCRIBE_BUFFER=100

# Metrics Configuration
INDEXER_METRICS_ENABLED=true
